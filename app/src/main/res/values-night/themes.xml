<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_Lessons" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">#2B2727</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.DayNight">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">#72B6FF</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">#9E9E9E</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">#A1A1A1</item>
    </style>
</resources>